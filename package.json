{
  "name": "serverless-orders-crud",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf .serverless dist node_modules",
    "lint": "eslint --ext .ts src tests --max-warnings=0",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "sls:deploy:local": "SLS_DEBUG=* sls deploy --stage local",
    "sls:offline": "sls offline start --stage local",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.400.0",
    "@aws-sdk/lib-dynamodb": "^3.400.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "serverless": "^3.40.0",

    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.0",
    "eslint": "^8.50.0",
    "prettier": "^2.8.0",
    "lint-staged": "^13.2.0",
    "husky": "^8.0.0",
    "aws-sdk-client-mock": "^2.2.0",
    "cross-env": "^7.0.3"
  },
  "husky": {
    "hooks": {}
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
